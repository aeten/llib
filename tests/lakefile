c99.defaults {
    incdir='..',libdir='../llib',
	libs=choose(MSVC,'llib_static','llib'),
    defines=choose(DEBUG,'DEBUG')
}
build = c99.program

-- force rebuild of particular test!
if P then
  local prog = P..EXE_EXT
  if path.exists(prog) then os.remove(prog) end
  default{ build(P) }
  return
end

targets = {
    build('test-obj'),
    build('test-list'),
    build('test-file'),
    build('test-scan'),
    build('test-seq'),
    build('test-map'),
    build('test-str'),
    build('test-template'),
    build('test-json'),
    build('test-xml'),
    build('test-table'),
    build('test-pool'),
    build('test-config'),
    build('testing'),
    build('testa'),
    build('test-array'),
}

-- force this target to be on top;
-- runs testing after everyone is updated
target.all (targets,LOCAL_EXEC..'testing',true)


